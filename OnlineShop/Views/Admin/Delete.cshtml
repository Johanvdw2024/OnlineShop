@model OnlineShop.Models.ProductsModel

<h1>Delete Product</h1>

<div>
    <h4>Products</h4>

    <dl class="row">
        <dt class="col-sm-3">
            Name
        </dt>
        <dd class="col-sm-9">
            @Model.ProductName
        </dd>

        <dt class="col-sm-3">
            ItemDescription
        </dt>
        <dd class="col-sm-9">
            @Model.ItemDescription
        </dd>

        <dt class="col-sm-3">
            Date Created
        </dt>
        <dd class="col-sm-9">
            @Model.Created
        </dd>

        <dt class="col-sm-3">
            Date Updated)
        </dt>
        <dd class="col-sm-9">
            @Model.Updated
        </dd>
    </dl>

    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>